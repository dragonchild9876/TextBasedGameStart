var choice1 = prompt("What race do you want to be? Human is the only option right now, but more will be added down the road. To choose human, type: 1, Human, human, Terran, or terran")
switch(choice1){
  case:'1'
  document.write("")
  break;
  case:'Human'
  document.write("")
  break;
  case:'human'
  document.write("")
  break;
  case:'Terran'
  document.write("")
  break;
  case:'terran'
  document.write("")
  break;
  default:
  document.write("")
}
